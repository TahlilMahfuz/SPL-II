<div class="signup-form">
    <form action="/user/usersignup" method="post" class="form-horizontal">
        <div class="row">
            <div class="col-8 offset-4">
                <h2>Sign Up</h2>
            </div>
        </div>
        <div class="form-group row">
            <label for="username" class="col-form-label col-4">Username</label>
            <div class="col-8">
                <input type="text" maxlength="20" id="username" class="form-control" name="username" required="required">
            </div>
        </div>
        <div class="form-group row">
            <label for="usernid" class="col-form-label col-4">NID</label>
            <div class="col-8">
                <input type="text" maxlength="20" id="usernid" class="form-control" name="usernid" required="required">
            </div>
        </div>
        <div class="form-group row">
            <label for="email" class="col-form-label col-4">Email Address</label>
            <div class="col-8">
                <input type="email" id="useremail" class="form-control" name="useremail" required="required">
            </div>
        </div>
        <div class="form-group row">
            <label for="userphone" class="col-form-label col-4">Phone</label>
            <div class="col-8">
                <input type="tel" id="phone" maxlength="11" class="form-control" pattern="[0-9]{11}" placeholder="01XXXXXXXXX" name="userphone" required="required">
            </div>
        </div>
        <div class="form-group row">
            <label for="userpassword" class="col-form-label col-4">Password</label>
            <div class="col-8">
                <input type="password" maxlength="23" id="userpassword" class="form-control" name="userpassword" required="required">
            </div>
        </div>
        <div class="form-group row">
            <label for="cuserpassword" class="col-form-label col-4">Confirm Password</label>
            <div class="col-8">
                <input type="password" maxlength="23" class="form-control" name="cuserpassword" id="cuserpassword" required="required">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-4">
                <p>
                    <small id="emailHelp" class="form-check-label">Make sure to type the same password</small>

                <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
            </div>
        </div>
    </form>

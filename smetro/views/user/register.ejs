    delete no_err;
} %>



<div class="signup-form">
    <form action="/user/register" method="post" class="form-horizontal">
        <div class="row">
            <div class="col-8 offset-4">
                <h2>Confirmation</h2>
            </div>
        </div>
        <div class="form-group row">
            <label for="uservarcode" class="col-form-label col-4">Verification Code</label>
            <div class="col-8">
                <input type="text" maxlength="20" id="userotp" class="form-control" name="uservarcode" required="required">
            </div>
        </div>
        <div>
            <p id="response"></p>
        </div>
        <input type="hidden" maxlength="20" class="form-control" id="username" name="username" value=<%=username%>
        aria-describedby="emailHelp" placeholder="Not email" required>
        <input type="hidden" maxlength="20" class="form-control" id="usernid" name="usernid" value=<%=usernid%>
        aria-describedby="emailHelp" placeholder="" required>
        <input type="hidden" maxlength="50" class="form-control" id="useremail" name="useremail" value=<%=useremail%>
        aria-describedby="emailHelp" required>
        <input type="hidden" class="form-control" id="phone" name="userphone" value=<%=userphone%>
        maxlength="11" pattern="[0-9]{11}" placeholder="01XXXXXXXXX(Use only digits)" required>
        <input type="hidden" maxlength="23" class="form-control" id="userpassword" name="userpassword"
               value=<%=userpassword%> required>
        <input type="hidden" maxlength="23" class="form-control" id="userotp" name="userotp"
               value=<%=userotp%> required>
        <div class="form-group row">
            <div class="col-8 offset-4">
                <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
            </div>
        </div>
    </form>
    <!--    <div class="text-center">Already have an account? <a href="#">Login here</a></div>-->
</div>



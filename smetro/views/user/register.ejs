<script>
    const p = document.getElementById('response');
    if(typeof error != 'undefined'){
    error.forEach(error => {
        p.textContent = error.message;
    })
        delete error;
        delete no_err;
    }

    if(typeof no_err != 'undefined'){
    no_err.forEach(no_err => {
        p.textContent = no_err.message;
    })
        delete no_err;
    }
</script>

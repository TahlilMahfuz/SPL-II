<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>SignUp</title>
</head>

<body> 
    <%-include('../partials/navlogged') %>
    <div class="jumbotron">
        <div class="card shadow mb-4 my-2 mx-auto" style="max-width: 700px;">
            <div class="card-header py-3">
                <h3 class="p-3 mb-2 bg-success text-white text-center">Welcome to SMetro. Here is your ticket.</h3><br>
                <img src="../img/train.png" class="d-block mx-auto" height="100" width="150" alt="Responsive image"><br>
                <div class="row">
                    <div class="col-4"><h4>Reservation ID:</h4></div>
                    <div class="col-8"><h4><%=results.rows[0].reservationid%></h4></div>
                </div>
                <div class="row">
                    <div class="col-4"><h4>Passenger Name:</h4></div>
                    <div class="col-8"><h4><%=results.rows[0].username%></h4></div>
                </div>
                <div class="row">
                    <div class="col-4"><h4>Train Name:</h4></div>
                    <div class="col-8"><h4><%=results.rows[0].trainname%></h4></div>
                </div>
                <div class="row">
                    <div class="col-4"><h4>Departure Station:</h4></div>
                    <div class="col-8"><h4><%=results.rows[0].departure%></h4></div>
                </div>
                <div class="row">
                    <div class="col-4"><h4>Destination Station:</h4></div>
                    <div class="col-8"><h4><%=results.rows[0].destination%></h4></div>
                </div>
                <div class="row">
                    <div class="col-4"><h4>Departure Time:</h4></div>
                    <div class="col-8"><h4><%=results.rows[0].departuretime%></h4></div>
                </div>
                <div class="row">
                    <div class="col-4"><h4>Arrival Time:</h4></div>
                    <div class="col-8"><h4><%=results.rows[0].arrivaltime%></h4></div>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <img src="../img/qr.png" class="mx-auto" height="500" width="500" alt="Responsive image">
                </div>
                <button class="btn btn-primary btn-lg float-right" onclick="window.print()">Print</button>
            </div>
        </div>
    </div>
    
    
    
    

    

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
    </script>
</body>

</html>

